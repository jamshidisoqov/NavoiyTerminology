<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#F2F1F1"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_name_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/abandon"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_terms_selectable"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/img_terms_star"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/img_terms_selectable"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            app:tint="#454444" />

        <View
            android:id="@+id/line1"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@id/img_terms_selectable"
            android:layout_marginStart="8dp"
            android:background="#3C3B3B"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_description_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/abandon"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>